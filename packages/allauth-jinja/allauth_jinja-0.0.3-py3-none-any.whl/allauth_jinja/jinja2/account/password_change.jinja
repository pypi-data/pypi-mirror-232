{% extends "account/base.jinja" %}

{% block head_title %}{% trans %}Change Password{% endtrans %}{% endblock %}

{% block content %}
<h1>{% trans %}Change Password{% endtrans %}</h1>

<form method="POST" action="{{ url('account_change_password') }}" class="password_change">
    {% csrf_token %}
    {{ form }}
    <button type="submit" name="action">{% trans %}Change Password{% trans %}</button>
    <a href="{{ url('account_reset_password') }}">{% trans %}Forgot Password?{% endtrans %}</a>
</form>
{% endblock %}