{% extends "account/base.jinja" %}
{% block head_title %}
    {% trans %}
        Set Password
    {% endtrans %}
{% endblock head_title %}
{% block content %}
    <form method="post"
          action="{{ url('account_set_password') }}"
          class="password_set">
        {% csrf_token %}
        {{ form }}
        <input type="submit"
               name="action"
               value="{% trans %} Set Password {% endtrans %}"/>
    </form>
{% endblock content %}
