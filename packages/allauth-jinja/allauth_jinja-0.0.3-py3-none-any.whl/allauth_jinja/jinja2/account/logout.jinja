{% extends "account/base.jinja" %}

{% block head_title %}
{% trans %}Sign Out{% endtrans %}
{% endblock %}

{% block content %}
<h1>{% trans %}Sign Out{% endtrans %}</h1>

<p>{% trans %}Are you sure you want to sign out?{% endtrans %}</p>

<form method="post" action="{{ url('account_logout') }}">
    {% csrf_token %}
    {% if redirect_field_value %}
    <input type="hidden" name="{{ redirect_field_name }}" value="{{ redirect_field_value }}" />
    {% endif %}
    <button type="submit">{% trans %}Sign Out{% endtrans %}</button>
</form>


{% endblock %}