# Justfile

# load environment variables
set dotenv-load

# aliases

# list justfile recipes
default:
    just --list

# setup
setup:
    @pip install -r requirements.txt

# build
build:
    just clean
    @python -m build

# install
install:
    @pip install -e '.[all]'

# uninstall
uninstall:
    @pip uninstall pokerbot -y

# publish-test
release-test:
    just build
    @twine upload --repository testpypi dist/* -u __token__ -p ${PYPI_TEST_KEY}

# publish
release:
    just build
    @twine upload dist/* -u __token__ -p ${PYPI_KEY}

# smoke-test
smoke-test:
    black --check .

# clean
clean:
    @rm -r pgns || True
    @rm -rf dist || True

